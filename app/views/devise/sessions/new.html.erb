<div class="w-full flex justify-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
    <h1 class="text-2xl text-gray-700 text-center font-semibold">Inicio de sesión</h1>
    <p class="text-gray-500 text-center">Ingrese sus credenciales para poder continuar</p>
    <div class="grid grid-cols-1 gap-4 border shadow p-8 rounded-md mt-12 bg-white">
        <div class="">
          <%= form.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-skin-accented sm:text-sm sm:leading-6", placeholder: "user@domain.com" %>
        </div>
        <div class="">
          <%= form.label :password, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <%= form.password_field :password, class: "block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-skin-accented sm:text-sm sm:leading-6", placeholder: "******", autocomplete: "current-password"  %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= form.check_box :remember_me, class: "w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
            <%= form.label :remember_me, 'Recordarme'%>
          </div>
        <% end %>
        <div class="">
          <%= form.submit 'Iniciar sesión', class: "w-full bg-blue-500 rounded-md px-3 py-2 text-sm font-semibold text-white shadow-sm text-white ring-0 hover:bg-blue-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600" %>
        </div>
    </div>
  <% end %>
</div>