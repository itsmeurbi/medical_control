<%= turbo_stream.replace "advance_search" do %>
  <%= turbo_frame_tag "advance_search" %>
  <div id="default-modal" tabindex="-1" aria-hidden="true" class="shadow bg-gray-900/50 overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full flex" data-controller="modal" data-modal-target="modalContainer">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
      <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
        <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
            BÃºsqueda avanzada
          </h3>
          <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="default-modal" data-action="modal#closeModal">
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
            <span class="sr-only">Close modal</span>
          </button>
        </div>
        <div class="p-4">
          <%= form_with url: advance_searches_path, method: :get, data: { turbo_stream: true } do |f| %>
            <div class="grid gap-4 grid-cols-2">
              <div>
                <%= f.label :attribute_name, "Campo a buscar", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.select :attribute_name,
                    Patient.searchable_attributes.map { |col| [col.titleize, col] },
                    { include_blank: "Seleccione un campo" },
                    { required: true, class: "w-full rounded p-2 border border-gray-300 focus:ring-blue-500 focus:border-blue-500" } %>
              </div>
              <div>
                <%= f.label :match_type, "Tipo de coincidencia", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.select :match_type,
                    options_for_select([
                      ['Coincidencia exacta', 'exact'],
                      ['Comienza con', 'starts_with'],
                      ['Contiene', 'contains'],
                      ['Termina con', 'ends_with']
                    ]),
                    { include_blank: "Seleccione el tipo de coincidencia" },
                    { required: true, class: "w-full rounded p-2 border border-gray-300 focus:ring-blue-500 focus:border-blue-500" } %>
              </div>
              <div class="col-span-2">
                <%= f.label :attribute_value, "Valor", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.text_field :attribute_value,
                    required: true,
                    class: "w-full rounded p-2 border border-gray-300 focus:ring-blue-500 focus:border-blue-500",
                    placeholder: "Ingrese el valor a buscar" %>
              </div>
            </div>

            <div class="flex justify-end mt-4 gap-2">
              <%= f.submit "Buscar", class: "bg-blue-600 hover:bg-blue-800 text-white font-bold py-2 px-4 rounded" %>
              <button type="button" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" data-action="modal#closeModal">
                Cancelar
              </button>
            </div>
          <% end %>
        </div>
        <div class="p-4">
          <%= turbo_frame_tag "patients_list" do %>
            <!-- Initial patients list or empty state -->
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>